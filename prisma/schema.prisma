enum UserType {
  USER
  VC
}

enum ProjectRound {
  PRE_SEED  @map("PRE SEED")
  SEED      @map("SEED")
  PRIVATE_1 @map("PRIVATE 1")
  PRIVATE_2 @map("PRIVATE 2")
  PRIVATE_3 @map("PRIVATE 3")
  PUBLIC    @map("PUBLIC")
}
